{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tasks list</h1>

    <table>
        <thead>
            <tr>
                <th>Lp</th>
                <th>Nazwa:</th>
                <th>Data:</th>
                <th>Miejsce:</th>
                <th>Kwota:</th>
                <th>Kategoria:</th>
                <th>Dodane przez:</th>
                <th>Opcje:</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td><a href="{{ path('task_show', { 'id': task.id }) }}">{{ task.id }}</a></td>
                <td>{{ task.name }}</td>
                <td>{% if task.date %}{{ task.date|date('d-m-Y') }}{% endif %}</td>
                <td>{{ task.place }}</td>
                <td>{{ task.prize }}</td>
                <td>{{ task.category }}</td>
                <td>{{ task.addedBy }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('task_show', { 'id': task.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('task_edit', { 'id': task.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('task_new') }}">Create a new task</a>
        </li>
    </ul>
{% endblock %}
